@{
    ViewData["Title"] = "Get User";
}

<div class="panel">
    <div class="panel panel-heading">
        Get User
    </div>
    <div class="panel panel-body">
        <label for="key">User id:</label>
        <input type="number" class="text" id="key">
        <button type="button" class="btn btn-success" onclick="send()">Send</button>

        <script>
            function send(e) {
                window.location.replace("http://localhost:5068/Home/GetUser?id=" + document.getElementById("key").value)
            }
        </script>
    </div>
</div>